<div class="row m-3 p-3">
  <div class="col">
    <% if (typeof errors !='undefined' ) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
      </div>
      <% } %>
      
        <form method="post" action="/contact/update">
          <input type="hidden" name="oldName" value="<%= (contact.oldName) ? contact.oldName : contact.name %>">
          <div class="mb-3">
            <label for="nama" class="form-label">Nama</label>
            <input type="text" class="form-control" id="name" name="name" required value="<%= contact.name %>" />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required value="<%= contact.email %>" />
          </div>
          <div class="mb-3">
            <label for="mobile" class="form-label">No HP</label>
            <input type="number" class="form-control" id="mobile" name="mobile" required
              value="<%= contact.mobile %>" />
          </div>
          <button type="submit" class="btn btn-warning">Edit Data</button>
          <a class="btn btn-primary" href="/contact/<%= contact.name %> " role="button">Kembali</a>
        </form>

  </div>
</div>